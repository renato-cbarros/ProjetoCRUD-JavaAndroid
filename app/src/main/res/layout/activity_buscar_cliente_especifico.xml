<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BuscarClienteEspecificoActivity">

    <LinearLayout
        android:id="@+id/linearCliBuscEsp"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewCliBusEspIdCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente o CPF" />

        <EditText
            android:id="@+id/editTextCliBusEspIdCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliBuscEspBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="buscar" />

        <TextView
            android:id="@+id/textViewCliBusEspNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome" />

        <TextView
            android:id="@+id/textViewCliBusEspNomeBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCliBusEspId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente" />

        <TextView
            android:id="@+id/textViewCliBusEspIdBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCliBusEspCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF" />

        <TextView
            android:id="@+id/textViewCliBusEspCpfBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>