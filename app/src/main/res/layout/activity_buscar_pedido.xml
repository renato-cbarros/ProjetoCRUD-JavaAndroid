<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BuscarPedidoActivity">

    <LinearLayout
        android:id="@+id/linearPedBusc"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewPedBuscIdObser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID do Pedido ou Observação" />

        <EditText
            android:id="@+id/editTextPedBuscIdObser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnPedBuscBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textViewPedBuscDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data do pedido" />

        <TextView
            android:id="@+id/textViewPedBuscDtBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPedBuscValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor" />

        <TextView
            android:id="@+id/textViewPedBuscValorBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPedBuscObserv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observação" />

        <TextView
            android:id="@+id/textViewPedBuscObserBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>