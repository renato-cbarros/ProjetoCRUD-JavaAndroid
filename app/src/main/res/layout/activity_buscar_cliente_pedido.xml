<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BuscarClientePedidoActivity">

    <LinearLayout
        android:id="@+id/linearCliPedBusc"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewCliPedBuscIDCliPEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente Pedido" />

        <EditText
            android:id="@+id/editTextCliPedBuscIDCLiPEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliPedBusIdCliPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textViewCliPedBuscIDCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente" />

        <EditText
            android:id="@+id/editTextCliPedBuscIDCLi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliPedBusIdCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textViewCliPedBuscIDPEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pedido" />

        <EditText
            android:id="@+id/editTextCliPedBuscIDPEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliPedBusIdPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdCliPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente Pedido" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdCliPedBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdCliBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pedido" />

        <TextView
            android:id="@+id/textViewCliPedBuscIdPedBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>