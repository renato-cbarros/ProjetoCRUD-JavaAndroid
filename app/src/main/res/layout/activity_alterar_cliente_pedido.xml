<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AlterarClientePedidoActivity">

    <LinearLayout
        android:id="@+id/linearCliPedAlt"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewCliPedALtIdCliPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente Pedido" />

        <EditText
            android:id="@+id/editTextCliPedAltIdCliPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliPedAltBusc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <TextView
            android:id="@+id/textViewCliPedALtIdCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Cliente" />

        <EditText
            android:id="@+id/editTextCliPedAltIdCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewCliPedALtIdPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pedido" />

        <EditText
            android:id="@+id/editTextCliPedAltIdPed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnCliPedAltAlterar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alterar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>